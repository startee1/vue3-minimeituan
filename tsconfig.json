{
  "files": [],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "lib":["es2015","DOM"],
    "skipLibCheck": true,
    "baseUrl": "./", 
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "include":["**/*.ts","src/**/*.d.ts","src/types/**/*.d.ts","src/**/*.ts","src/**/*.tsx","src/**/*.vue"],
  "exclude": ["node_modules"],
}
